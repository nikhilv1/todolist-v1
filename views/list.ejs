<%- include("header") -%>

<div class="heading-div">
    <h1 class="heading shadow-lg"><%= listTitle %></h1>
</div>

<div class="todo-div">
    <ul class="list-group shadow-lg ">
        <% for(var i = 0; i<todos.length ; i++){ %>
        <div id="border-fix-1" class=" list-group-item todo-div  todo-background">
            <input class="checkbox-strikethrough" type="checkbox">
            <p class="p-inline"><%= todos[i] %></p>

        </div>
        <% } %>
    </ul>
</div>

<form action="/" class="list-group-item todo-div border-fix-2 form-background" method="post">
    <div class="row">
        <div class="col-10 input-todo-div">
            <input class="input-todo" type="text" name="newTodo" placeholder="New Todo" autocomplete="off">
        </div>
        <div class="col-2">
            <button class="add-button" name="list" type="submit" value="<%= listTitle %>">+</button>
        </div>
    </div>

</form>

<%- include("footer") -%>